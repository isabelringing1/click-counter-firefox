{
  "manifest_version": 3,
  "name": "Click Counter",
  "description": "",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": "click.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": ["<all_urls>"],
      "js": ["/content.js"],
      "run_at": "document_start"
    }  
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "click-counter@isabellee.me"
    }
  }
}